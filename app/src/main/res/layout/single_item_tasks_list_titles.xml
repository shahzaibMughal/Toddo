<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_single_item_margin"
    android:id="@+id/itemContainer"
    android:background="@drawable/list_item_selector">


    <ImageView
        android:id="@+id/listTitleRectangle"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_for_single_list_item"
        app:layout_constraintBottom_toBottomOf="@id/itemContainer"
        app:layout_constraintTop_toTopOf="@id/itemContainer"/>

    <TextView
        android:id="@+id/listTitleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:maxLines="3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/list_single_item_text_color"
        android:textSize="@dimen/lists_single_item_textSize"
        tools:text="List Titles" />
</LinearLayout>
